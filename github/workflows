name: Deploy Bot

on:
  push:
    branches:
      - main  # Здесь указываешь ветку, куда ты пушишь код (например, main)

jobs:
  deploy:
    runs-on: ubuntu-latest  # Окружение Ubuntu для выполнения действий

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2  # Клонируем репозиторий

    - name: Set up Python
      uses: actions/setup-python@v2  # Устанавливаем Python
      with:
        python-version: '3.9'  # Указываем версию Python

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip  # Обновляем pip
        pip install -r requirements.txt  # Устанавливаем зависимости из requirements.txt

    - name: Run Bot
      run: |
        python bot.py  # Указываем имя главного файла бота
